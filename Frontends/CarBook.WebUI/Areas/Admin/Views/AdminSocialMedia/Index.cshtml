@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Social Media List</h4>
                        <p class="card-subtitle mb-4">
                            You can manage your social media here. You can add, list, delete and edit social media from this Page.
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Url</th>
                                        <th>Icon</th>
                                        <th>Operatıons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.SocialMediaId</td>
                                            <td>@item.SocialMediaName</td>
                                            <td>@item.SocialMediaUrl</td>
                                            <td>@item.SocialMediaIcon</td>
                                            <td>
                                                <a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning">Update</a>
                                                <a href="/Admin/AdminSocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-info">Add Social Media</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





