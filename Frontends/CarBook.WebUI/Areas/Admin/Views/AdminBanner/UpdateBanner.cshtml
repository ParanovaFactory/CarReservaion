@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Banner</h4>
                        <p class="card-subtitle mb-4">
                            You can update banner here. Please fill in the details below.
                        </p>
                        <form method="post">
                                <input type="hidden" asp-for="BannerId">
                            <div class="form-group">
                                <label for="exampleInputModel">Banner Title</label>
                                <input type="text" class="form-control" asp-for="BannerTitle" id="exampleInputModel" placeholder="Banner Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Banner Description</label>
                                <textarea class="form-control" asp-for="BannerDescription" placeholder="Banner Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Banner Video Description</label>
                                <textarea class="form-control" asp-for="BannerVideoDescription" placeholder="Banner Video Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Banner Video Url</label>
                                <textarea class="form-control" asp-for="BannerVideoUrl" placeholder="Banner Video Url"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

