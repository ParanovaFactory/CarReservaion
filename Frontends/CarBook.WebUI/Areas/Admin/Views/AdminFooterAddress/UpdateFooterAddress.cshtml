@model UpdateFooterAddressDto

@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Footer Address</h4>
                        <p class="card-subtitle mb-4">
                            You can update footer address here. Please fill in the details below.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressId" />
                            <div class="form-group">
                                <label for="exampleInputModel">About Description</label>
                                <textarea class="form-control" asp-for="FooterAddressDesciription" placeholder="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">About Image URL</label>
                                <input type="text" class="form-control" asp-for="FooterAddressAddress" placeholder="Address">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">About Image URL</label>
                                <input type="text" class="form-control" asp-for="FooterAddressPhone" placeholder="Phone">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">About Image URL</label>
                                <input type="text" class="form-control" asp-for="FooterAddressEmail" placeholder="E-Mail">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



