@model  UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Category</h4>
                        <p class="card-subtitle mb-4">
                            You can update category here. Please fill in the details below.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="CategoryId"/>
                                <label for="exampleInputModel">Category Name</label>
                                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Category Name">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


