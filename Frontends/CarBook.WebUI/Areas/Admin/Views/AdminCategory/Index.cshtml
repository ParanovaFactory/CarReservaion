@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category List</h4>
                        <p class="card-subtitle mb-4">
                            You can manage your category here. You can add, list, delete and edit category from this Page.
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Operatıons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CategoryId</td>
                                            <td>@item.CategoryName</td>
                                            <td>
                                                <a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-warning">Update</a>
                                                <a href="/Admin/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminCategory/CreateCategory" class="btn btn-outline-info">Add Category</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





