@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Feature</h4>
                        <p class="card-subtitle mb-4">
                            You can update feature here. Please fill in the details below.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="FeatureId"/>

                            <div class="form-group">
                                <label for="exampleInputModel">Feature Name</label>
                                <input type="text" class="form-control" asp-for="FeatureName" id="exampleInputModel" placeholder="Feature Name">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


