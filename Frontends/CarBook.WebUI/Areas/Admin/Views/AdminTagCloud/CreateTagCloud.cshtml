@model CreateTagCloudDto

@{
    ViewData["Title"] = "CreateTagCloud";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create New Tag</h4>
                        <p class="card-subtitle mb-4">
                            You can create a new tag here. Please fill in the details below.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputModel">Title</label>
                                <input type="text" class="form-control" asp-for="TagCloudTitle" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBrand">Brand</label>
                                @Html.DropDownListFor(m => m.TagCloudBlogId, (List<SelectListItem>)ViewBag.BlogValues, new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


