@model List<ResultCarWithBrandsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car List</h4>
                        <p class="card-subtitle mb-4">
                            You can manage your cars here. You can add, edit, delete or search cars from this Page.
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Model</th>
                                        <th>Kilometer</th>
                                        <th>Transmission</th>
                                        <th>Operatıons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CarId</td>
                                            <td>@item.CarBrandName</td>
                                            <td>@item.CarModel</td>
                                            <td>@item.CarKilometer</td>
                                            <td>@item.CarTransmission</td>
                                            <td>
                                                <a href="/Admin/AdminCar/DeleteCar/@item.CarId" class="btn btn-outline-danger">Delete</a>
                                                <a href="/Admin/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-warning">Update</a>
                                                <a href="/Admin/AdminCarFeatureDetail/Index/@item.CarId" class="btn btn-outline-dark">Details</a>
                                                <a href="/Car/CarDetail/@item.CarId" class="btn btn-outline-secondary">Show Case</a>
                                                <a href="/Admin/CarList/CarShowcase/@item.CarId" class="btn btn-outline-success">Price</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminCar/CreateCar" class="btn btn-outline-info">Add Car</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

