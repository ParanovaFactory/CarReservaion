@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update About</h4>
                        <p class="card-subtitle mb-4">
                            You can update about here. Please fill in the details below.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="aboutId"/>
                            <div class="form-group">
                                <label for="exampleInputModel">About Title</label>
                                <input type="text" class="form-control" asp-for="aboutTitle" placeholder="Banner Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">About Description</label>
                                <textarea class="form-control" asp-for="aboutDescription" placeholder="Banner Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">About Image URL</label>
                                <input type="text" class="form-control" asp-for="aboutImageUrl" placeholder="Banner Title">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



