@model List<ResultLocationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Location List</h4>
                        <p class="card-subtitle mb-4">
                            You can manage your locations here. You can add, list, delete and edit locations from this Page.
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Period</th>
                                        <th>Lodation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.LocationId</td>
                                            <td>@item.LocationName</td>
                                            <td>
                                                <a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-warning">Update</a>
                                                <a href="/Admin/AdminLocation/DeleteLocation/@item.LocationId" class="btn btn-outline-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminLocation/CreateLocation" class="btn btn-outline-info">Add Location</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






