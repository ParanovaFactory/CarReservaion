@model CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create New Service</h4>
                        <p class="card-subtitle mb-4">
                            You can create a new service here. Please fill in the details below.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputModel">Title</label>
                                <input type="text" class="form-control" asp-for="ServiceTitle" placeholder="Service Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Description</label>
                                <textarea class="form-control" asp-for="ServiceDescription" placeholder="Service Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Icon</label>
                                <input type="text" class="form-control" asp-for="ServiceIcon" placeholder="Service Icon">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



