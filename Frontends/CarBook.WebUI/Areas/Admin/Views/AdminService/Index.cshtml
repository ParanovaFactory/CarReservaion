@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Service List</h4>
                        <p class="card-subtitle mb-4">
                            You can manage your service here. You can add, list, delete and edit service from this Page.
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Icon</th>
                                        <th>Operatıons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ServiceId</td>
                                            <td>@item.ServiceTitle</td>
                                            <td>@item.ServiceDescription</td>
                                            <td>@item.ServiceIcon</td>
                                            <td>
                                                <a href="/Admin/AdminService/UpdateService/@item.ServiceId" class="btn btn-outline-warning">Update</a>
                                                <a href="/Admin/AdminService/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminService/CreateService" class="btn btn-outline-info">Add Service</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







