@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Author List</h4>
                        <p class="card-subtitle mb-4">
                            You can manage your author here. You can add, list, delete and edit author from this Page.
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Image Url</th>
                                        <th>Operatıons</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AuthorId</td>
                                            <td>@item.AuthorName</td>
                                            <td>@item.AuthorDescription.Substring(0, Math.Min(10, @item.AuthorDescription.Length))</td>
                                            <td>@item.AuthorImageUrl.Substring(0, Math.Min(10, @item.AuthorImageUrl.Length))</td>
                                            <td>
                                                <a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorId" class="btn btn-outline-warning">Update</a>
                                                <a href="/Admin/AdminAuthor/DeleteAuthor/@item.AuthorId" class="btn btn-outline-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminAuthor/CreateAuthor" class="btn btn-outline-info">Add Author</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



