@model List<ResultLast3BlogsWithAuthorDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="sidebar-box ftco-animate">
    <h3>Recent Blog</h3>
    @foreach (var item in Model)
    {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4" style="background-image: url(@item.BlogCoverImageUrl);"></a>
            <div class="text">
                <h3 class="heading"><a href="#">@item.BlogTitle</a></h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span>@item.BlogCreatedDate.ToString("dd/MM/yyyy")</a></div>
                    <div><a href="#"><span class="icon-person"></span> @item.BlogAuthorName</a></div>
                    <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                </div>
            </div>
        </div>
    }
</div>