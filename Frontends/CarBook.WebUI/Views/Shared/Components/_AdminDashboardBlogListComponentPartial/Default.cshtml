@model List<ResultBlogWithAuthorDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Blog List</h4>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.BlogTitle
                                    </h5>
                                    <span class="text-muted font-size-12">@item.BlogCreatedDate.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.BlogContent.Substring(0, 10)</h5>
                                    <span class="text-muted font-size-12">Content</span>
                                </td>
                                @* <td>
                                    <h5 class="font-size-17 mb-1 font-weight-normal">
                                        <i class="fab fa-cc-visa"></i>
                                    </h5>
                                    <span class="text-muted font-size-12">Card</span>
                                </td> *@
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.BlogAuthorName
                                    </h5>
                                    <span class="text-muted font-size-12">Author</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->