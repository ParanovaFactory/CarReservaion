@model List<CarBook.Dto.AboutDtos.ResultAboutDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@foreach(var item in Model)
{
	<section class="ftco-section ftco-about">
		<div class="container">
			<div class="row no-gutters">
				<div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url(@item.aboutImageUrl);">
				</div>
				<div class="col-md-6 wrap-about ftco-animate">
					<div class="heading-section heading-section-white pl-md-5">
						<span class="subheading">About us</span>
						<h2 class="mb-4">@item.aboutTitle</h2>

						<p>@item.aboutDescription</p>
						<p><a href="/RentACar/Index" class="btn btn-primary py-3 px-4">Search Vehicle</a></p>
					</div>
				</div>
			</div>
		</div>
	</section>
}
