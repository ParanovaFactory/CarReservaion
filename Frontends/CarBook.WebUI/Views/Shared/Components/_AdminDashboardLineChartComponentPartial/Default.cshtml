<script src="~/chart.js"></script>

<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Number of Yearly Rent</h4>

            <div style="height: 260px;">
                <canvas id="my1Chart" height="220px"></canvas>
                <script>
                    var values = document.getElementById('my1Chart').getContext('2d');
                    var myChart = new Chart(values, {
                        type: 'line',
                        data: {
                            labels: ['2019', '2020', '2021', '2022', '2023'],
                            datasets: [{
                                label: 'Yearly Rent Graphic',
                                data: [285, 245, 185, 366, 458],
                                borderColor: 'rgba(75,192,192,1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                </script>
            </div>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>$1875.54</h4>
                    <p class="text-muted mb-0">Last Mounth Income</p>
                </div>
                <div class="col-6">
                    <h4>$541.34</h4>
                    <p class="text-muted mb-0">Today Income</p>
                </div>
            </div>
        </div>
    </div>
</div>