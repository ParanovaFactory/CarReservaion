@model List<ResultCarReviewDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <div class="row">
        <div class="col-md-7">
            @foreach (var item in Model)
            {
                <div class="review d-flex">
                    <div class="desc">
                        <h4>
                            <span class="text-left">@item.CarReviewName</span>
                            <span class="text-right">@item.CarReviewDate.ToString("dd/MM/yyyy")</span>
                        </h4>
                        <p class="star">
                            <span>
                                @for (int i = 0; i < @item.CarReviewRating; i++)
                                {
                                    <i class="ion-ios-star"></i>
                                }
                            </span>
                        </p>
                        <p>@item.CarReviewContent</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

