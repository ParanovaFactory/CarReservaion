@model List<FilterRentACarDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

@await Component.InvokeAsync("_RentACarMainCoverComponentPartial")

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CarCoverImageUrl);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="car-single.html">@item.CarModel</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.BrandName</span>
                                <p class="price ml-auto">@* @item.PricingAmount *@ <span>/day</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="/Booking/Index/@item.RentACarCarId" class="btn btn-primary py-2 mr-1">Book now</a> <a href="/Car/CarDetails/@item.RentACarCarId" class="btn btn-secondary py-2 ml-1">Details</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

