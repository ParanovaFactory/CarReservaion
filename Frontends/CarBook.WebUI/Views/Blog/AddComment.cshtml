

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Leave a comment</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <input type="hidden" name="CommentBlogId" value="@ViewBag.blogid" />
        <input type="hidden" name="CommentDate" value="@DateTime.Now" />
        <div class="form-group">
            <label for="name">Name </label>
            <input type="text" class="form-control" name="CommentName">
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea cols="30" rows="10" class="form-control" name="CommentDescription"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>